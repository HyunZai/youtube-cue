{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Server",
        "program": "${workspaceFolder}/server/index.js",
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to Server",
        "port": 9229,
        "restart": true,
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }